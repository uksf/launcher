<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UKSF_Launcher" x:Class="UKSF_Launcher.MainWindow"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Height="500"
        Width="500"
        Background="{StaticResource UKSF.Background}">
    <Grid x:Name="RootControl">
        <local:TitleBarControl x:Name="TitleBarControl" Margin="0,0,0,464"/>
        <local:MainControl x:Name="MainControl"/>
        <local:SettingsControl x:Name="SettingsControl" Margin="0,36,0,0"/>
    </Grid>
</Window>
