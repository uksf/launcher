<UserControl x:Class="UKSF_Launcher.FTS_TitleBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="500">
    <Grid Height="36" VerticalAlignment="Top" Background="{StaticResource UKSF.BackgroundDark}" MouseDown="FTS_TitleBarControl_MouseDown">
        <Button x:Name="FTS_TitleBarControl_ButtonClose" Width="36" Click="FTS_TitleBarControl_ButtonClose_Click" HorizontalAlignment="Right" Panel.ZIndex="1" Style="{StaticResource UKSF.Button}">
            <Image Width="25" Height="25" RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Source" Value="pack://application:,,,/UKSF-Launcher;component/Resources/Icons/Close.png"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Source" Value="pack://application:,,,/UKSF-Launcher;component/Resources/Icons/CloseH.png"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Button>
        <Label x:Name="FTS_TitleBarControl_Label" FontSize="20" FontFamily="Arial" Foreground="{StaticResource UKSF.Foreground}" Content="First Time Setup" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="498" Margin="10,0,0,0" Padding="0,0,0,0" Panel.ZIndex="0"/>
    </Grid>
</UserControl>
