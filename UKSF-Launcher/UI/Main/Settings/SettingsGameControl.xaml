<UserControl x:Class="UKSF_Launcher.UI.Main.Settings.SettingsGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:general="clr-namespace:UKSF_Launcher.UI.General"
             mc:Ignorable="d"
             d:DesignHeight="428" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Width="480">
            <Border Height="50" Style="{StaticResource Uksf.ContainerBorder}">
                <Grid>
                    <Label Content="Profile" Height="18" Style="{StaticResource Uksf.SettingsLabel}" />
                    <general:ProfileSelectionControl x:Name="SettingsGameControlDropdownProfileSelectionControl" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>