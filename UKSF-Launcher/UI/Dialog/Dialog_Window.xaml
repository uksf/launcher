<Window x:Class="UKSF_Launcher.Dialog_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UKSF_Launcher"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Height="250"
        Width="500"
        Background="{StaticResource UKSF.Background}"
        BorderBrush="{StaticResource UKSF.BackgroundDarker}">
    <Grid>
        <local:Dialog_TitleBarControl x:Name="Dialog_TitleBarControl" Margin="0,0,0,214"/>
        <local:Dialog_MainControl x:Name="Dialog_MainControl" Margin="0,36,0,0"/>
    </Grid>
</Window>
